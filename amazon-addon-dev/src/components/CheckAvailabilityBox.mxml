<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 verticalGap="0"
		 xmlns:local="*"
		 width="100%"
		 xmlns:components="components.*"
		 xmlns:services="services.*">
	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			[Bindable]
			public var offers:ArrayCollection=new ArrayCollection();
		]]>
	</mx:Script>
	<mx:DataGrid width="100%"
				 dataProvider="{offers}">
		<mx:columns>
			<mx:DataGridColumn headerText="Name"
							   dataField="Name"/>
			<mx:DataGridColumn headerText="Price"
							   dataField="Price"/>
			<mx:DataGridColumn headerText="Min Shipping Price"
							   dataField="Min Shipping Price"/>
			<mx:DataGridColumn headerText="Net Price"
							   dataField="NetPrice"/>
			<mx:DataGridColumn headerText="Shipping"
							   dataField="Shipping"/>
		</mx:columns>
	</mx:DataGrid>
</mx:VBox>
